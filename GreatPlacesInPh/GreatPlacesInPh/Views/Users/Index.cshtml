@model IEnumerable<GreatPlacesInPh.Models.ApplicationUser>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Users</h2>

<div class="row">
    <div class="col-md-12">
        <table class="table table-responsive">
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th></th>
            </tr>            
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.FullName</td>
                        <td>@item.Email</td>
                        <td>@Html.ActionLink("Delete", "Delete", "Users", new { id = item.Id }, new { @class = "btn btn-sm btn-danger" })</td>
                    </tr>
                }                            
        </table>
    </div>
</div>

